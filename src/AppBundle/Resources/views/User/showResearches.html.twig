{% extends 'AppBundle::menu.html.twig' %}
{% block content %}
    {% include 'search.twig' %}
    <h3>Badania</h3>
    <table class="table">
        <tr class="bg-primary">
            <th>
                {{ 'Title'|trans }}
            </th>
            <th>
                {{ 'Place'|trans }}
            </th>
            <th>
                {{ 'Description'|trans }}
            </th>
            <th>
                {{ 'Payed'|trans }}
            </th>
            <th>
                {{ 'Tags'|trans }}
            </th>
            <th>
                {{ 'Action'|trans }}
            </th>
        </tr>
        {% for research in researches %}
            <tr>
                <td>
                    {{ research.title }}
                </td>
                <td>
                    {% if research.localization %}
                        {{ research.localization }}
                    {% endif %}
                </td>
                <td>
                    {% if research.description %}
                        {{ research.description }}
                    {% endif %}
                </td>
                <td>
                    {% if research.payed %}
                        Tak
                    {% else %}
                        Nie
                    {% endif %}
                </td>
                <td>
                    {% for tag in research.tags %}
                        <code>{{ tag.name }}</code>
                    {% else %}
                        Brak tag√≥w
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('message_new', {'id': research.id}) }}">Kontakt</a>
                </td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}